<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.progradler.rat_um_rad.client.gui.javafx.game.chatRoom.ChatRoomController">
    <Label alignment="CENTER" text="chat room">
        <font>
            <Font name="Arial Black" size="15.0" />
        </font>
    </Label>
    <ScrollPane fitToHeight="true" fitToWidth="true">
        <content>
            <ListView fx:id="chatPaneListView" />
        </content>
    </ScrollPane>
    <HBox>
        <TextField fx:id="chatMsgTextField" onAction="#sendChatMessageAction" prefHeight="42.0" prefWidth="200.0" promptText="say something" />
        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendChatMessageAction" prefHeight="28.0" prefWidth="50.0" text="send">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
    </HBox>
</VBox>
