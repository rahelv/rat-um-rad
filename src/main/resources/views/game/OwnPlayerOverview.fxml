<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="VBox" xmlns="http://javafx.com/javafx/19"
         fx:id="ownPlayerOverviewController">
    <Label alignment="CENTER" text="my Cards and Stuff">
        <font>
            <Font name="Arial Black" size="15.0"/>
        </font>
    </Label>
    <HBox>
        <VBox>
            <Label>DestinationCards</Label>
            <ScrollPane fitToWidth="true">
                <ListView prefHeight="100.0" prefWidth="250" orientation="HORIZONTAL"
                          fx:id="destinationCardListView"></ListView>
            </ScrollPane>
        </VBox>
        <VBox>
            <Label>WheelCards</Label>
            <ScrollPane fitToWidth="true">
                <ListView prefHeight="100.0" orientation="HORIZONTAL" fx:id="wheelCardListView"></ListView>
            </ScrollPane>
        </VBox>
    </HBox>
    <HBox>
        <Label text="wheelCount: "></Label>
        <Label fx:id="wheelCount"></Label>
        <Label text="  score: "></Label>
        <Label fx:id="playerScore"></Label>
    </HBox>
</fx:root>