<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="VBox" xmlns="http://javafx.com/javafx/19" fx:id="lobbyController" spacing="10.0">
    <Label text="Open Games">
        <font>
            <Font name="Arial Bold" size="15.0"/>
        </font>
    </Label>
    <ScrollPane prefHeight="300" fitToWidth="true">
        <content>
            <ListView fx:id="openGamesListView"/>
        </content>
    </ScrollPane>
</fx:root>


