<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/19">
    <GridPane>
        <Label GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="CENTER" layoutX="31.0" layoutY="25.0"
               prefHeight="55.0" prefWidth="400.0" text="High Score List">
            <font>
                <Font name="Arial Black" size="30.0"/>
            </font>
        </Label>
        <Button GridPane.rowIndex="0" GridPane.columnIndex="1" fx:id="backToLobbyButton" layoutX="505.0" layoutY="1.0"
                mnemonicParsing="false" text="back to Lobby" onAction="#returnButtonAction"/>
        <ScrollPane fitToWidth="true" GridPane.rowIndex="1" GridPane.columnIndex="0" prefHeight="400.0"
                    prefWidth="400.0">
            <content>
                <ListView fx:id="highScoreListView"/>
            </content>
        </ScrollPane>
    </GridPane>
</AnchorPane>
